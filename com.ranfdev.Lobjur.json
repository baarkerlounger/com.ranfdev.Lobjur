{
    "app-id" : "com.ranfdev.Lobjur",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "lobjur",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "modules" : [
        {
            "name" : "Lobjur",
            "buildsystem" : "simple",
            "build-commands": [
                "install -D app.js /app/bin/lobjur",
                "cp -r jslibs /app/bin/jslibs",
                "mkdir -p /app/share/",
                "cp -r data/icons /app/share/icons/",
                "install -D data/com.ranfdev.Lobjur.desktop /app/share/applications/com.ranfdev.Lobjur.desktop",
                "install -D data/com.ranfdev.Lobjur.metainfo.xml /app/share/metainfo/com.ranfdev.Lobjur.metainfo.xml"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/ranfdev/Lobjur/releases/download/v1.0.0/com.ranfdev.Lobjur.tar.xz",
                    "sha256": "f4fec13047b26478e62c50ab544aa5bc168d957b85a592b0c7e04a5b9328069f"
                }
            ]
        }
    ]
}
